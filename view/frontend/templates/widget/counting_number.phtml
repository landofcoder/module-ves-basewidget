<?php if($number): ?>
<?php $blockId = rand().time(); ?>
<div class="ves-widget widget-counters counters">
   <div class="counter-wrap <?php if (isset($stylecls)&&$stylecls) echo 'text-'.$stylecls;?>" style="<?= (isset($font_size) && $font_size)?'font-size:'.$font_size:''; ?>">

    <?php if($icon): ?>
    <i class="fa <?= $icon; ?>" style="<?= (isset($font_size) && $font_size)?'font-size:'.$font_size:''; ?>"></i><br>
    <?php endif; ?>

    <span id="counter<?= $blockId ?>" class="counter"><?= (int)$number; ?></span></div>

    <?php if (isset($title)&&!empty($title)): ?>
    <h5><?= $title; ?></h5>
  <?php endif; ?>

  <?php if (isset($description)&&!empty($description)): ?>
    <div class="description"><?= $description; ?></div>
  <?php endif; ?>
</div>

<script type="text/javascript">
require(['jquery'],function($){
    $(document).ready(function(){
      require([
        'jquery',
        <?php if($this->helper("Ves\All\Helper\Data")->getConfig("enable_bootstrap_js")): ?>
        ,"Ves_All/lib/bootstrap/js/bootstrap.min"
        <?php endif; ?>
        ],function($){
          $('#counter<?= $blockId ?>').each(function() {

            $(this).animate({countNum: $(this).text()}, {
              duration: <?= $speed?(int)$speed:8000; ?>,
              easing:'linear',
              step: function() {
                $(this).text(Math.floor(this.countNum));
              },
              complete: function() {
                $(this).text(this.countNum);
              }
            });
          });
        });
   });
});
</script>
<?php endif; ?>
